<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.miniproject.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.miniproject.ui.stats.StatsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/navigation_calender"
        android:name="com.example.miniproject.ui.calender.CalenderFragment"
        android:label="@string/title_calender"
        tools:layout="@layout/fragment_calender" />

    <fragment
        android:id="@+id/navigation_videos"
        android:name="com.example.miniproject.ui.video.VideosFragment"
        android:label="@string/title_videos"
        tools:layout="@layout/fragment_videos" />
</navigation>